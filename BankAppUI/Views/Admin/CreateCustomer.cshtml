@model BankAppUI.Models.Customer

<div class="card">
    <div class="card-body">
        <form asp-controller="Admin" asp-action="CreateCustomer" method="post">

            <div class="form-group">
                <label asp-for="Givenname">Namn</label>
                <input required class="form-control" asp-for="Givenname" type="text" />
            </div>



            <div class="form-group">
                <label asp-for="Surname">Efternamn</label>
                <input required class="form-control" asp-for="Surname" type="text" />
            </div>


            <div class="form-check form-check-inline">
                <input required class="form-check-input" type="radio" asp-for="Gender" value="male" />Man

            </div>
            <div class="form-check form-check-inline">
                <input required class="form-check-input" type="radio" asp-for="Gender" value="female" />Kvinna
            </div>

            

            <div class="form-group">
                <label asp-for="Streetaddress">Gatuadress</label>
                <input required class="form-control" asp-for="Streetaddress" type="text" />
            </div>


            <div class="form-group">
                <label asp-for="City">Stad</label>
                <input required class="form-control" asp-for="City" type="text" />
            </div>



            <div class="form-group">
                <label asp-for="Zipcode">Postnummer</label>
                <input required class="form-control" asp-for="Zipcode" type="number" maxlength="5" />
            </div>



            <div class="form-group">
                <label asp-for="Birthday">Födelsedatum</label>
                <input required class="form-control" asp-for="Birthday" type="date" />
            </div>



            <div class="form-group">
                <label asp-for="Telephonenumber">Telefon</label>
                <input required class="form-control" asp-for="Telephonenumber" type="text" />
            </div>



            <div class="form-group">
                <label asp-for="Emailaddress">Mail</label>
                <input required class="form-control" asp-for="Emailaddress" type="text" />
            </div>






            <button class="btn btn-primary" type="submit">Skapa kund</button>

            <br />

            <p>@ViewBag.Message</p>




        </form>
    </div>
</div>

