@model BankAppUI.ViewModels.TransferViewModel

<div class="card">
    <div class="card-body">
        <form asp-controller="Customer" asp-action="Transfer" method="post">

            <div class="form-group">
                <p>Konto</p><select class="form-control" asp-for="accountId" asp-items="@Model.items"></select>
            </div>

            <div class="form-group">
                <label asp-for="@Model.targetAccount">Mottagare</label>
                <input required class="form-control" asp-for="@Model.targetAccount" type="number" />
            </div>

           

            <div class="form-group">
                <label asp-for="@Model.amount">Belopp</label>
                <input required class="form-control" asp-for="@Model.amount" type="number" />
            </div>

            <button class="btn btn-primary" type="submit">Skicka</button>

        </form>
    </div>
</div>